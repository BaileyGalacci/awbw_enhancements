{
    "name": "AWBW Helper",
    "description": "Miscellaneous tweaks for Advance Wars By Web.",
    "version": "0.1",
    "manifest_version": 3,
    "background": {
        "service_worker": "background.js"
    },
    "permissions": [
        "activeTab",
        "scripting",
        "storage"
    ],
    "host_permissions": [
        "https://awbw.amarriner.com/*"
    ],
    "action": {
        "default_popup": "popup.html",
        "default_icon": {
            "16": "/images/fighter_icon16.png",
            "32": "/images/fighter_icon32.png",
            "48": "/images/fighter_icon48.png",
            "128": "/images/fighter_icon128.png"
        }
    },
    "icons": {
        "16": "/images/fighter_icon16.png",
        "32": "/images/fighter_icon32.png",
        "48": "/images/fighter_icon48.png",
        "128": "/images/fighter_icon128.png"
    },
    "options_page": "options.html",
    "content_scripts": [
        {
            "matches": ["https://awbw.amarriner.com/*"],
            "css": ["awbw_helper.css"],
            "js": [
                "lib/util.js",
                "lib/game_data.js",
                "lib/player_panel.js",
                "lib/update_throttler.js",
                "replay_shortcuts_script.js",
                "property_counter_script.js"
            ]
        }
    ]
}
